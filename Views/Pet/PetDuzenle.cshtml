@model Pet


<div class="container-fluid">
  <div class="row">

     <div class="col-md-5" style="margin-top:150px; ">
            <img src="~/images/bb.jpg" alt="Resim" width="250px" height="200px" style="float: right;" class="img-fluid">
        </div>
 <div class="col-md-6 align-items-center justify-content-center">
<img src="~/images/yyy.jpg" alt="Resim" class="img-fluid" style="margin-left:40px; margin-top:40px;">

<h3 class="text-center" style="margin-top:40px; margin-left:55px;">PET DÜZENLE</h3>

<form method="post" enctype="multipart/form-data" style="margin-left: 120px;">
    <!-- Gizli petID Alanı -->
    <input type="hidden" name="petID" value="@Model.petID" />

    <div class="form-group" style="margin-top: 20px;">
        <label for="petAd">Pet Adı</label>
        <input type="text" class="form-control" id="petAd" name="petAd" value="@Model.petAd" required />
    </div>
    
    <div class="form-group" style="margin-top: 10px;">
        <label for="petYas">Pet Yaşı</label>
        <input type="number" class="form-control" id="petYas" name="petYas" value="@Model.petYas" required />
    </div>

    <div class="form-group" style="margin-top: 10px;">
        <label for="petBilgi">Pet Bilgisi</label>
        <textarea class="form-control" id="petBilgi" name="petBilgi" required>@Model.petBilgi</textarea>
    </div>

    <div class="form-group" style="margin-top: 10px;">
        <label for="petFoto">Pet Fotoğrafı</label>
        <input type="file" class="form-control" id="petFoto" name="petFoto" />
    </div>

     <div class="text-center" style="margin-top: 20px; margin-left:55px; margin-bottom: 40px;">
        <button type="submit" class="btn btn-primary" value="kaydet">Kaydet</button>
    </div>
</form>
 </div>
  </div>
</div>