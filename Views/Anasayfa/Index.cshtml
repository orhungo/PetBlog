@model IEnumerable<PetBlog.Models.Blog>

@{
    ViewData["Title"] = "Anasayfa";
}

<style>
    body {
        background-color: #f8f9fa; 
    }

    .hero-section {
        background-image: url('/images/blog-arka.jpg'); 
        background-size: cover; 
        background-position: center; 
        height: 400px; 
        position: relative;
        display: flex;
        justify-content: flex-end;
        align-items: center;
        color: black;
        padding: 20px;
    }

    .hero-section h1 {
        font-size: 3rem;
        font-weight: bold;
        margin-bottom: 10px;
        text-shadow: 2px 2px 5px rgba(255, 255, 255, 0.7);
    }

    .hero-section p {
        font-size: 1.5rem;
        margin: 0;
        text-shadow: 2px 2px 5px rgba(255, 255, 255, 0.7);
    }

    .blog-card {
        border: none;
        border-radius: 1.0 rem; 
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); 
        margin-bottom: 20px; 
        transition: transform 0.2s; 
    }

    .blog-card:hover {
        transform: scale(1.02); 
    }

    .blog-card img {
        width: 100%; 
        height: auto; 
    }

    .btn-custom {
        border: 1px solid #ffffff; 
        color: #000; 
        background-color: white; 
        font-size: 12px; 
        padding: 5px 10px; 
        position: absolute; 
        right: 10px; 
        bottom: 10px; 
    }

    .btn-custom:hover {
        background-color: #f8f9fa; 
    }
</style>

<div class="hero-section">
    <div class="overlay">
        <h1>Hoş Geldin</h1>
        <p>Birlikte Öğrenelim</p>
    </div>
</div>

<div class="container mt-4">
    <h1 class="text-center mb-5">Blog Yazıları</h1>
    <div class="row">
        @foreach (var blog in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="blog-card">
                    <img src="@blog.gorselUrl" alt="@blog.baslik" />
                    <div class="card-body">
                        <h5 class="card-title">@blog.baslik</h5>
                        <p class="card-text">
                            @Html.Raw(blog.icerik.Substring(0, Math.Min(blog.icerik.Length, 150)))... <!-- İçeriğin ilk 150 karakteri, etiketler korunarak -->
                        </p>
                        <a href="@Url.Action("Details", "Blog", new { id = blog.blogId })" class="btn btn-custom">Devamını Oku</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
