@model List<Pet>
@{
    ViewData["Title"] = "Profile";
}
<head>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>


<div class="card mb-3" style="max-width: 100%; margin-top: 25px;">
  <div class="row g-0" >
    <div class="col-md-4 ">
      <img src="~/images/cute.jpg" class="img-fluid rounded-start" alt="...">
    </div>
    <div class="col-md-8 ">
      <div class="card-body">
        <h5 class="card-title">İsim Soyisim</h5>
        <p class="card-text">Lorem ipsum dolor sit amet, consectetur adipisicing elit. Ab, voluptas maiores. Incidunt, sed voluptatem dignissimos reiciendis laboriosam expedita ullam nihil quasi tempore blanditiis! Sapiente, vel? Lorem, ipsum dolor sit amet consectetur adipisicing elit. Maxime veritatis nobis sint natus qui voluptatibus eos asperiores aut, sit unde?</p>
        <p class="card-text"><small class="text-body-secondary">Lorem ipsum dolor sit amet.</small></p>
        <button class="btn btn-primary">Profili Düzenle</button>
      </div>
    </div>
  </div>
</div>

<p><b class="fs-3"  style="margin-left: 30px;">PETLERİM</b> <button type="button" class="btn btn-outline-success" style="margin-right: 30px; float: right;"><a style="color: darkgreen;" href="~/Pet/PetProfil">Pet Ekle</a></button></p>

<div class="row row-cols-1 row-cols-md-3 g-2">
    @foreach (var pet in Model)
    {
    <div class="col">
      <div class="card">
        <img src="data:image/jpeg;base64,@Convert.ToBase64String(pet.petFoto)" class="card-img-top" alt="...">
         <div class="card-body">
          <h5 class="card-title">@pet.petAd <span class="text-muted">(@pet.petYas Yaşında)</span></h5>
          <p class="card-text">@pet.petBilgi</p>
         </div>
        <div class="card-footer" style="display: flex;">
          <a href="@Url.Action("PetDuzenle", "Pet", new { id = pet.petID })" class="card-link">Düzenle</a>
        <form method="post" action="@Url.Action("Delete", "Pet", new { id = pet.petID })">
          <button type="submit" class="card-link" style="color: red; margin-left: 20px;">Sil</button>
       </form> 
      </div>
     </div>
    </div>
    }
</div>

<br>
