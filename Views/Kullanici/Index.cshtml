@{
    ViewData["Title"] = "Login";
}

<div class="container-fluid">
    <div class="row">
      <!-- Sol taraf: Resim -->
      
      <div class="col-md-5" style="margin-top:100px">
        <ul type="square" class="fw-medium" style="list-style-type: none;">
          <li>❤️ Evcil hayvanınızın en güzel anılarını paylaşabilirsiniz.</nav></li>
          <li>🐾 Diğer pet sahipleriyle etkieşime geçebilirsiniz.</li>
          <li>⭐ Tecrübe ve deneyimlerinizi paylaşabilirsiniz.</li>
        </ul>
        <img src="~/images/www.jpg" alt="Resim" width="500px" height="500px" class="img-fluid ">
      </div>
      <!-- Sağ taraf: Form -->
      <div class="col-md-6 align-items-center justify-content-center"  >
              <img src="~/images/q.jpg" alt="Resim" class="img-fluid" style="margin-left:60px">

          <h3 class="text-center" style="margin-top:70px; margin-left:75px;">GİRİŞ</h3>
          <form method="post" asp-action="Index">
 <div class="form-floating mb-3" style="margin-left: 80px; margin-top: 20px;">
            <input type="email" class="form-control" id="email" name="email" placeholder="name@example.com" required>
            <label for="email">Email adresiniz</label>
          </div>
          <div class="form-floating mb-3" style="margin-left: 80px">
            <input type="sifre" class="form-control" id="sifre" name="sifre" placeholder="Şifreniz" required>
            <label for="sifre">Şifreniz</label>
          </div>
          <div class="col-sm text-center" style="margin-top: 30px; margin-left:75px;">
            <button type="submit" class="btn btn-primary">GİRİŞ YAP</button>
          </div>
        </form>
            <p style="margin-left:80px; margin-top: 30px;">Hesabınız yok mu? <a href="~/Kayit/KullaniciKayit">Üye Ol</a></p>
        </div> 
      </div>
    </div>
  </div>
</div>

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">
            @TempData["ErrorMessage"]
        </div>
    }

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">
            @TempData["SuccessMessage"]
        </div>
    }
